<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/abu"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="486dp"
            android:layout_height="208dp"
            android:src="@drawable/logo"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-38dp"
            tools:layout_editor_absoluteY="-22dp" />

        <ImageView
            android:id="@+id/logoakun"
            android:layout_width="50dp"
            android:layout_height="78dp"
            android:src="@drawable/ic_baseline_akun_24"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="353dp"
            tools:layout_editor_absoluteY="-2dp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Super Admin"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="5dp"/>

        <TextView
            android:id="@+id/tamyiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tamyiz"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold"
            tools:fontFamily="@font/creepster"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="140dp" />

        <TextView
            android:id="@+id/textView"
            android:textColor="@color/hijau"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaksi Buku"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="216dp"
            tools:ignore="MissingConstraints" />


        <androidx.cardview.widget.CardView
            android:id="@+id/satu"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            android:elevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="258dp"
            tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_menu_book_24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="100dp"
                    android:text="Transaksi Penjualan Buku" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/dua"
            android:elevation="8dp"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@+id/satu"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_baseline_menu_book_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="100dp"
                    android:text="Data Buku || Tambah Buku" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tiga"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            android:elevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/dua"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="258dp"
            tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_margin="10dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_menu_book_24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="100dp"
                    android:text="Data Piutang Buku" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/empat"
            app:layout_constraintTop_toBottomOf="@id/tiga"
            android:elevation="8dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="258dp"
            tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/logoempat"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_menu_book_24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="100dp"
                    android:text="Transaksi Penjualan Buku" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Transaksi Pesantren Bulanan"
            android:textColor="@color/hijau"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@+id/empat"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="19dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/lima"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            android:elevation="8dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="258dp"
            tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/logolima"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_cari_24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="100dp"
                    android:text="Pendaftaran Santri Baru" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/enam"
            app:layout_constraintTop_toBottomOf="@id/lima"
            android:elevation="8dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="258dp"
            tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/logoenam"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_cari_24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="100dp"
                    android:text="Kas (D/K)" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tujuh"
            app:layout_constraintTop_toBottomOf="@id/enam"
            android:elevation="8dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="258dp"
            tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/logotujuh"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_cari_24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="100dp"
                    android:text="Data Piutang Bulanan" />
        </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>